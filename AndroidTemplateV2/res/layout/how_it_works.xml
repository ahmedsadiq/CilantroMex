<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:theme="@android:style/Theme.NoTitleBar" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/topbar_logo"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
    </RelativeLayout>

    <!--
         <ScrollView android:id="@+id/scroll" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@+id/header" android:layout_centerHorizontal="true"
		>
    -->

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dip"
        android:background="@drawable/round_shape"
        android:paddingBottom="20dip" >

        <RelativeLayout
            android:id="@+id/eatLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dip" >

            <ImageView
                android:id="@+id/how_to_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/how_to1" />

            <TextView
                android:id="@+id/eat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@id/how_to_img"
                android:text="@string/Eat"
                android:textColor="#28765B"
                android:textSize="17dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eat_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eat_text"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/how_to_img"
                android:text="@string/eat_det_2"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eat_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eat_second"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/how_to_img"
                android:text="@string/eat_det_3"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eat_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/eat_text"
                android:layout_toRightOf="@+id/eat_text"
                android:paddingLeft="6dip"
                android:text="@string/eat_det_1"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/snapLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eatLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip" >

            <ImageView
                android:id="@+id/how_to_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/how_to2" />

            <TextView
                android:id="@+id/snap_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="3dip"
                android:layout_toRightOf="@id/how_to_1"
                android:text="@string/Snap"
                android:textColor="#28765B"
                android:textSize="17dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/snap_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/snap_text"
                android:layout_marginTop="4dip"
                android:layout_toRightOf="@id/snap_text"
                android:paddingLeft="6dip"
                android:text="@string/snap_det"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />

            <!--
                     <TextView android:id="@+id/empty" android:textSize="15dip"
					android:textStyle="bold" android:layout_width="wrap_content"
					android:layout_toRightOf="@id/snap_detail" android:layout_height="wrap_content"
					android:text="em" android:layout_marginTop="4dip"
					android:visibility="invisible" />
            -->

            <TextView
                android:id="@+id/snap_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/snap_detail"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/how_to_1"
                android:text="@string/snap_txt2"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/snap_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/snap_text2"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/how_to_1"
                android:text="@string/snap_txt3"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/claimLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/snapLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/how_to_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/how_to3" />

            <TextView
                android:id="@+id/claim_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="0dip"
                android:layout_toRightOf="@id/how_to_2"
                android:paddingTop="0dip"
                android:text="@string/claim"
                android:textColor="#28765B"
                android:textSize="17dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/claim_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/claim_text"
                android:text="@string/claim_det"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:textStyle="bold" />
            <!--
				<TextView android:id="@+id/claim_empty" android:textSize="15dip"
					android:textStyle="bold" android:layout_width="wrap_content"
					android:layout_toRightOf="@id/claim_detail" android:layout_height="wrap_content"
					android:text="@string/claim_em" android:layout_marginTop="6dip"
					android:visibility="invisible" />
            -->

            <TextView
                android:id="@+id/claim_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/claim_text"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/how_to_2"
                android:text="@string/claim_txt2"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/claim_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/claim_text2"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/how_to_2"
                android:text="@string/claim_txt3"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/needhelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/claimLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:paddingBottom="7dip"
            android:paddingTop="7dip"
            android:text="@string/needMoreHelp"
            android:textColor="#28765B"
            android:textSize="15dip"
            android:visibility="gone" />
<!--             alxmlns="default namespace" -->
    </RelativeLayout>
    <!-- </ScrollView> -->

</RelativeLayout>