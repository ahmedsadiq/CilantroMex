<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/header"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:theme="@android:style/Theme.NoTitleBar" android:background="@drawable/background"
	android:layout_width="fill_parent" android:layout_height="fill_parent">


	<RelativeLayout android:id="@+id/header"
		android:layout_width="fill_parent" android:gravity="center_vertical"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_alignParentTop="true" android:background="@drawable/topbar_logo">

	</RelativeLayout>


	<RelativeLayout android:id="@+id/loginlayoutback"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginLeft="7dip" android:layout_marginBottom="5dip"

		android:layout_marginRight="7dip" android:layout_marginTop="10dip"
		android:layout_below="@+id/header">

		<LinearLayout android:id="@+id/signUpLayout"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingLeft="30dip"
			android:paddingRight="30dip">

			<TextView android:textSize="19dip" android:text="@string/update_pass"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:id="@+id/signtext" android:layout_marginTop="40dip"
				android:textColor="#ffffff" android:textStyle="bold"></TextView>

			<!-- <TextView android:textSize="14dip" android:layout_marginBottom="10dip" 
				android:text="to keep track of your rewards" android:layout_height="wrap_content" 
				android:gravity="right" android:layout_width="wrap_content" android:id="@+id/forgetPasswordText" 
				android:textStyle="bold" android:textColor="#000000"></TextView> -->

			<EditText android:id="@+id/oldPassword" android:inputType="textPassword"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:singleLine="true" android:paddingLeft="7dip"
				android:textColor="#b4b3b4" android:textSize="18dip"
				android:autoText="false" android:capitalize="none"
				android:scrollHorizontally="true" android:layout_marginTop="3dip"
				android:hint="@string/old_password" android:background="@drawable/info_top"
				android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890" />

			<EditText android:id="@+id/newPassword" android:inputType="textPassword"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:singleLine="true" android:textColor="#b4b3b4"
				android:textSize="18dip" android:autoText="false"
				android:capitalize="none" android:scrollHorizontally="true"
				android:paddingLeft="7dip" android:hint="@string/new_password"
				android:background="@drawable/info_bottom"
				android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890" />

			<EditText android:id="@+id/repeateNewPassword"
				android:inputType="textPassword" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:singleLine="true"
				android:textColor="#b4b3b4" android:textSize="18dip"
				android:autoText="false" android:capitalize="none"
				android:scrollHorizontally="true" android:paddingLeft="7dip"
				android:hint="@string/repeat_password" android:background="@drawable/info_bottom"
				android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890" />

			<Button android:id="@+id/submitButton" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginTop="20dip"
				android:background="@drawable/submit_bg" android:text="@string/submit"
				android:textColor="#ffffff" android:textSize="20dip"
				android:textStyle="bold" />

		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>


