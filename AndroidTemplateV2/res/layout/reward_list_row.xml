<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rewardsrow" android:paddingTop="5px"
	android:paddingBottom="5px" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TableLayout android:id="@+id/rewardsname"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="5px" android:stretchColumns="2"
		android:layout_weight="1" android:paddingLeft="20dip"
		android:orientation="horizontal">

		<TableRow android:id="@+id/offerRow" android:background="@drawable/reward_available"
			android:layout_height="65dip" android:layout_width="fill_parent">

			<TextView android:id="@+id/offer" android:text="Buy one get one free"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textColor="#ffffff" android:layout_column="1"
				android:paddingTop="10dip" android:textSize="18dip"
				android:textStyle="bold" android:layout_marginLeft="10dip"
				android:singleLine="true" android:paddingBottom="10dip" />

			<RelativeLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_column="2"
				android:layout_marginTop="10dip" android:layout_gravity="right" android:paddingRight="10dip" >

				<Button android:id="@+id/pointsButton" android:layout_height="wrap_content"
					android:background="@drawable/cost_lg" android:layout_width="wrap_content"
					android:text="GRATIS" android:textStyle="bold" android:textColor="#ffffff"
					android:textSize="12dip"
					android:layout_marginTop="10dip" />

				<!--<ImageView android:id="@+id/getImage" android:scaleType="fitEnd" 
