<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:theme="@android:style/Theme.NoTitleBar"
	android:background="@drawable/background" android:orientation="vertical"
	android:layout_width="wrap_content" android:focusable="true"
	android:focusableInTouchMode="true">

	<RelativeLayout android:id="@+id/header"
		android:layout_width="fill_parent" android:gravity="center_vertical"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_alignParentTop="true" android:background="@drawable/topbar_logo" >
	
	</RelativeLayout>

	<ScrollView android:id="@+id/scroll" android:layout_below="@+id/header"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginBottom="7dip" android:layout_marginTop="7dip"
		android:layout_marginLeft="6dip"  android:layout_marginRight="6dip"
		android:fillViewport="true"   >
 
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/Linear"
			android:orientation="horizontal" android:padding="25dip">

			<TextView android:text="@string/notWorry"  android:textStyle="bold"
				android:textColor="#28765B" android:id="@+id/notworry"
				android:layout_marginTop="25dip" android:layout_below="@+id/header"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:textSize="22dip" />

			<TextView android:text="@string/enteremail"
				android:textColor="#ffffff" android:id="@+id/enteremail"
				 android:layout_below="@+id/notworry"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:textSize="13dip" android:textStyle="bold"/>

			<EditText android:id="@+id/email" android:layout_width="fill_parent"
				android:singleLine="true" android:layout_height="wrap_content"
				android:hint="@string/email" android:paddingLeft="10dip"
				android:textColor="#b4b3b4"  android:background="@drawable/form_field"
				android:layout_marginTop="15dip" android:layout_below="@+id/enteremail" />

			<Button android:id="@+id/send" android:layout_width="fill_parent"
				android:background="@drawable/send" android:layout_below="@+id/email"
				android:layout_marginTop="15dip" android:layout_height="wrap_content" />

		</RelativeLayout>
		
		
		
		
	</ScrollView>

</RelativeLayout>
